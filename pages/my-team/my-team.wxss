@import "../common/lib/weui.wxss";
@import "../common/font.wxss";

.container {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25px;
}
.container-col {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}
.team-info {
  text-align: center;
  margin-top: 5px;
  font-size: 18px;
}
.line {
  width: 100%;
  height: 1px;
  background-color: gainsboro;
  margin-top: 1px;
}
.record-section {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}
.record-item {
  background-color: whitesmoke;
  margin: 25rpx;
  padding: 15rpx;
  box-shadow: 0 5px 5px 0 #D0D0D0;
}
