@import "../common/lib/weui.wxss";
@import "../common/font.wxss";

.contest-page {
  display: flex;
  flex-direction: column;
}
.apply {
  background-color: #E1F9FD;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 15rpx;
}
.apply-btn {
  background-color: #E1F9FD;
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  margin: 0;
  padding-top: 10rpx;
}
.contest-section {
  margin-top: 20rpx;
  background-color: whitesmoke;
}
.contest-title {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
  padding: 15rpx 10rpx;
  text-align: center;
  background-color: #fff;
  border-bottom: 2rpx solid #ccc;
}
.contest-info {
  background-color: #fff;
  border-bottom: 2rpx solid #ccc;
  margin: 20rpx 0;
  padding: 10rpx 25rpx;
}
.attachment {
  display: flex;
  flex-direction: row;
}
.attachment-btn {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 24rpx;
  margin: 0;
  padding-top: 10rpx;
}

